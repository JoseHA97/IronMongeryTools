                        <a class="nav-link text-dark" asp-area="" asp-controller="Proveedor" asp-action="Index">Proveedores</a>
                    </li>
                    }
                    @if (User.IsInRole("Administrador"))
                    {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a>
                    </li>
                    }
                    @if (User.IsInRole("Administrador"))
                    {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Venta" asp-action="Index">Ventas</a>
                    </li>
                    }
                    @if (User.IsInRole("Administrador"))
                    {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="DetalleVenta" asp-action="Index">Detalles de ventas</a>
                    </li>
                    }
                    @if (User.IsInRole("Administrador"))
                    {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MovimientosInventario" asp-action="Index">Movimientos de inventario</a>
                    </li>
                    }
                    
                </ul>
                <div class="d-flex align-items-center">
                    @* Mostrar el rol del usuario si está almacenado en la sesión *@
                    @{
                        var rol = Context.Session.GetString("UserRole");
                    }
                    @if (!string.IsNullOrEmpty(rol))
                    {
                        <span class="badge bg-primary me-4">
                            @rol
                        </span>
                    }
                    <form method="post" action="/Acceso/Logout" class="mb-0">
                        <button type="submit" class="btn btn-outline-danger">Cerrar Sesión</button>
                    </form>
                </div>
            </div>
