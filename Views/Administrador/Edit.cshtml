@model IronMongeryTools.Models.Administrador

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar el administrador</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="edit-form" autocomplete="off" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="custom-form-group">
                <label asp-for="AdministradorID" class="control-label">Administrador ID</label>
                <input asp-for="AdministradorID" class="form-control" maxlength="11" readonly/>
                <span asp-validation-for="AdministradorID" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" type="text" maxlength="60"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" maxlength="10"/>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="custom-form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" type="email" pattern="[a-z]" size="30" readonly/>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
    <button type="submit" class="btn btn-primary custom-edit-btn">Guardar cambios</button>
        </form>

    <div>
    <a asp-action="Index" class="btn btn-primary custom-regresar-btn mt-3">Regresar a la lista</a>
    </div>
    
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    
