@model IronMongeryTools.Models.RestablecerContraseñaViewModel
@{
    Layout = null;
}

<h2>Restablecer contraseña</h2>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="favicon.png">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap">
    <!-- Estilos personalizados -->
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #646466;
            font-family: 'Poppins', sans-serif;
        }

        .registro-container {
            width: 100%;
            max-width: 500px;
            padding: 20px;
            background: rgb(139, 137, 137);
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div class="registro-container">
        <h2 class="text-center">Restablecer contraseña</h2>
        <form asp-action="RestablecerContraseña" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo de Email -->
            <div class="custom-form-group">
                <label>Email:</label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo oculto para el token -->
            <input type="hidden" asp-for="PasswordResetToken" />

            <div class="custom-form-group">
                <label>Nueva contraseña:</label>
                <input asp-for="NewPasswordHash" class="form-control" type="password" required />
                <span asp-validation-for="NewPasswordHash" class="text-danger"></span>
            </div>

            <div class="custom-form-group">
                <label>Confirmar nueva contraseña:</label>
                <input asp-for="ConfirmNewPasswordHash" class="form-control" type="password" required />
                <span asp-validation-for="ConfirmNewPasswordHash" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-primary">Restablecer</button>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-2">
                    @TempData["Error"]
                </div>
            }
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>